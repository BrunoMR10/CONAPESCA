<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AsignaTicket">

    <ProgressBar
        android:id="@+id/CargandoTicket"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/DatosTicketAsigna"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="SeleccionaBarco"
            android:text="Seleccione tipo de servicio"
            android:textColor="#3657B6" />

        <Spinner
            android:id="@+id/Tipodeservicio"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="15" />

        <TextView
            android:id="@+id/TipoServicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="date"
            android:onClick="AbreCalendario" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="SeleccionaIngeniero"
            android:text="Ingrese Numero de oficio"
            android:textColor="#3657B6" />

        <EditText
            android:id="@+id/NOficio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="No. de oficio"
            android:inputType="textPersonName"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="SeleccionaIngeniero"
            android:text="Seleccione Fecha"
            android:textColor="#3657B6" />

        <ImageButton
            android:id="@+id/imageButton15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="AbreCalendario"
            app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

        <TextView
            android:id="@+id/FechaOficiov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:hint="Fecha de oficio"
            android:inputType="date"
            android:onClick="AbreCalendario" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="SeleccionaIngeniero"
            android:text="Seleccione Ingeniero"
            android:textColor="#3657B6" />

        <ImageButton
            android:id="@+id/imageButton16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SeleccionaIngeniero"
            app:srcCompat="@drawable/fui_ic_anonymous_white_24dp" />

        <TextView
            android:id="@+id/NombreIngeniero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#272729"
            android:visibility="visible" />

        <TextView
            android:id="@+id/PuestoIngeniero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#272729"
            android:visibility="visible" />

        <TextView
            android:id="@+id/UID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#272729"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/FotoIngeniero"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:clickable="true"
            android:onClick="SeleccionaIngeniero"
            android:visibility="visible"
            app:srcCompat="@drawable/image" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:onClick="SeleccionaBarco"
            android:text="Seleccione Barco"
            android:textColor="#3657B6" />

        <TextView
            android:id="@+id/NombreBarcoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#272729" />

        <TextView
            android:id="@+id/RNPView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#272729" />

        <TextView
            android:id="@+id/PuertoBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#272729" />

        <TextView
            android:id="@+id/PermisionarioV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#272729" />

        <ImageButton
            android:id="@+id/imageButton17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="SeleccionaBarco"
            app:srcCompat="@drawable/ic_baseline_phishing_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="AsignaTicket"
            app:srcCompat="@drawable/ic_baseline_check_24" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_cancel_24" />
    </LinearLayout>

</LinearLayout>